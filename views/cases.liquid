{% render "partials/head.liquid" %}

<section class="cases-section">
    
    <h1><span class="text-bold">Projecten</span> waar we trots op zijn!</h1>

    {% render 'partials/cases-card.liquid' cases: cases %}

</section>

<div class="pagination">
    {% if totalPages > 1 %}

        {% if currentPage > 1 %}
            <a class="red-btn" href="/cases/page/{{ currentPage | minus: 1 }}">← Vorige</a>
        {% endif %}

        {% for page in (1..totalPages) %}

            {% if page == currentPage %}
                <span><strong>{{ page }}</strong></span>
            {% else %}
                <a class="red-btn" href="/cases/page/{{ page }}">{{ page }}</a>
            {% endif %}

        {% endfor %}

        {% if currentPage < totalPages %}
            <a class="red-btn" href="/cases/page/{{ currentPage | plus: 1 }}">Volgende →</a>
        {% endif %}

    {% endif %}
</div>

{% render 'partials/mogelijkheden.liquid' %}

{% render "partials/foot.liquid" %}