{% render "partials/head.liquid" %}

<section class="cases-section">
    
    <h1>Projecten waar we trots op zijn!</h1>


</section>

<div class="pagination">
    {% if totalPages > 1 %}

        {% if currentPage > 1 %}
            <a href="/cases/page/{{ currentPage | minus: 1 }}">← Vorige</a>
        {% endif %}

        {% for page in (1..totalPages) %}

            {% if page == currentPage %}
                <span><strong>{{ page }}</strong></span>
            {% else %}
                <a href="/cases/page/{{ page }}">{{ page }}</a>
            {% endif %}

        {% endfor %}

        {% if currentPage < totalPages %}
            <a href="/cases/page/{{ currentPage | plus: 1 }}">Volgende →</a>
        {% endif %}

    {% endif %}
</div>

<section class="mogelijkheden">
    <h2>Wat kunnen we voor jou betekenen?</h2>
    <a href="/">Bekijk de mogelijkheden</a>
</section>